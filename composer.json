{
    "name": "sonsofphp/bard",
    "description": "Tool to help manage PHP monorepos using GitHub",
    "keywords": ["bard", "sonsofphp", "monorepo", "manager"],
    "type": "project",
    "bin": ["bin/bard"],
    "require": {
        "sonsofphp/event-dispatcher": "^0.2@dev",
        "sonsofphp/json": "^0.2@dev",
        "sonsofphp/version": "^0.2@dev",
        "symfony/console": "^6.1",
        "symfony/dotenv": "^6.0",
        "symfony/finder": "^6.0",
        "symfony/process": "^6.0"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SonsOfPHP\\Bard\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SonsOfPHP\\Bard\\Tests\\": "Tests/"
        }
    },
    "prefer-stable": true,
    "minimum-stability": "dev",
    "config": {
        "sort-packages": true
    },
    "extra": {
        "sort-packages": true,
        "branch-alias": {
            "dev-main": "0.2.x-dev"
        }
    }
}
